<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviiCatExp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_grey_200</item>
        <item name="colorPrimaryVariant">@color/light_grey_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_grey_200</item>
        <item name="colorSecondaryVariant">@color/dark_grey_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey_200</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/dark_grey_200</item>
    </style>
    <style name="BottomNavStyle">
        <item name="itemTextColor">@color/bottom_nav_tint_night</item>
        <item name="itemIconTint">@color/bottom_nav_tint_night</item>
    </style>
    <style name="AppbarBackground">
        <item name="android:background">@color/dark_grey_200</item>
    </style>
    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_large</item>
        <item name="android:background">@color/dark_grey_500</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="DetailPoster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/detail_poster_min_height</item>
    </style>
    <style name="DetailOverviewField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DetailOverviewValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_detail_field</item>
    </style>
    <style name="DetailTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/space_normal</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_detail_title</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DetailField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_detail_field</item>
    </style>

    <style name="DetailSeparator">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_detail_field</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>