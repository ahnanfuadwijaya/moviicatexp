<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MoviiCatExp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/light_grey_500</item>
        <item name="colorPrimaryVariant">@color/light_grey_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_grey_200</item>
        <item name="colorSecondaryVariant">@color/dark_grey_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_grey_200</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/light_grey_500</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="SplashStyle">
        <item name="android:background">@color/light_grey_200</item>
    </style>
    <style name="RVItemPoster">
        <item name="android:layout_height">@dimen/item_poster_height</item>
        <item name="android:layout_width">@dimen/item_poster_width</item>
    </style>

    <style name="RVItemTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RVItemTitle.List">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="RVItemScore">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_size_item_field</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RVItemIvScore">
        <item name="android:layout_width">@dimen/item_progress_size</item>
        <item name="android:layout_height">@dimen/item_progress_size</item>
    </style>

    <style name="RVItemField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_item_field</item>
    </style>
    <style name="RVItemField.List">
        <item name="android:layout_width">0dp</item>
    </style>
</resources>